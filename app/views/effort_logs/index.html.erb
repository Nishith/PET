<h3>Recent deliverables</h3>

<table>
  <tr>
    <th>Project</th>
    <th>Phase</th>
    <th>Deliverable</th>
    <th>Effort</th>
    <th></th>
  </tr>

<% if !@recent_deliverables.blank? %>
    <% @recent_deliverables.each do |deliverable| %>
      <tr>
        <td><%= deliverable.project_phase.project.name %></td>
        <td><%= deliverable.project_phase.name %></td>
        <td>
          <%= hidden_field_tag 'deliverable_id', deliverable.id %>
          <%= deliverable.name %>
        </td>
        <td><%= deliverable.total_logged_effort %></td>
        <td><a href="#" class="log-effort">Log Effort</a></td>
      </tr>
    <% end %>
<% end %>
</table>

<br />


<div id="new-effort-log-dialog">
  <%= render 'effort_logs/form' %>
</div>

<%= javascript_include_tag 'effort_logs/show-effort-log' %>
